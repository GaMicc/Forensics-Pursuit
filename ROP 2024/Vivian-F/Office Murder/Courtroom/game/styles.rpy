
style custom_button:
    idle_background Frame("button glossy idle", 12, 12)
    hover_background Frame("button glossy hover", 12, 12)
    insensitive_background Frame("button glossy idle", 12, 12)
    xpadding 30
    ypadding 10
    xmargin 5
    ymargin 5
    xalign 0.5
    size_group "custom_button"
    xysize(1600,150)

